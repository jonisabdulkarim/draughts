<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.RoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/roomTopToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/roomHostLinearLayout"
        android:layout_width="330dp"
        android:layout_height="135dp"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomTopToolbar">

        <ImageButton
            android:id="@+id/roomHostImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/red_man_disc" />

        <TextView
            android:id="@+id/roomHostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/roomHostPlaceholder" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/roomJoinLinearLayout"
        android:layout_width="330dp"
        android:layout_height="135dp"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomHostLinearLayout">

        <ImageButton
            android:id="@+id/roomJoinImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/white_man_disc" />

        <TextView
            android:id="@+id/roomJoinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/roomJoinPlaceholder" />
    </LinearLayout>

    <Button
        android:id="@+id/roomButtonInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="@string/invite"
        app:layout_constraintBottom_toBottomOf="@+id/roomBotToolbar"
        app:layout_constraintStart_toStartOf="@+id/roomBotToolbar"
        app:layout_constraintTop_toTopOf="@+id/roomBotToolbar" />

    <Button
        android:id="@+id/roomButtonStart"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="@+id/roomBotToolbar"
        app:layout_constraintEnd_toEndOf="@id/roomBotToolbar"
        app:layout_constraintTop_toTopOf="@+id/roomBotToolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/roomBotToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>